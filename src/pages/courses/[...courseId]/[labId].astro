---
import { getMarkdownFromUrl } from "@/data/services/contentService";
import LabLayout from "@/layouts/LabLayout.astro";
import { Course } from "@/types/entities/Courses";
import Markdown from "astro-remote/lib/Markdown.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const courses = await getCollection("courses");
    const courseData = courses.map((course) => course.data as Course);

    return courseData.flatMap((course) =>
        course.labs.map((lab) => ({
            params: {
                courseId: course.name,
                labId: lab.name,
            },
            props: {
                name: lab.name,
                title: lab.title,
                number: lab.number,
                content_url: lab.content_url,
            },
        }))
    );
}

const props = Astro.props;

const content = await getMarkdownFromUrl(props.content_url);
---

<LabLayout {...props}>
    <Markdown content={content} />
</LabLayout>
