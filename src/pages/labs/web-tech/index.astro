---
import { getCollection } from "astro:content";

import CourseLayout from "../../../layouts/CourseLayout.astro";

const yearOnMain = "2023";

const allWebTech = await getCollection("web-tech");

const lastWebtech = allWebTech
    .filter((material) => material.id.startsWith(yearOnMain))
    .sort((a, b) => a.data.number - b.data.number);

const schedule = lastWebtech.filter((post) => post.data.type === "schedule");
const rk = lastWebtech.filter((post) => post.data.type === "rk");
const statementHref =
    "https://docs.google.com/spreadsheets/d/1ex4WJz5JM003zWcFaSMEy-rjsCUg_umqwixbh-9DJAo/edit?gid=0#gid=0";
---

<CourseLayout
    title="Основы веб-технологий"
    description="Изучаем, как работает браузер, рассматриваем адаптивную верстку и принципы доступности"
    name="web-tech"
    labs={lastWebtech}
    rk={rk}
    schedule={schedule}
    statementHref={statementHref}
/>
