---
import { getCollection } from "astro:content";

import CourseLayout from "../../../layouts/CourseLayout.astro";

const yearOnMain = "2023";

const allWebTech = await getCollection("web-client-dev");

const lastWebtech = allWebTech
    .filter((material) => material.id.startsWith(yearOnMain))
    .sort((a, b) => a.data.number - b.data.number);

const statementHref =
    "https://drive.google.com/drive/folders/1Ifv2U1KM9Xu-n8btd0lYwXjttPSIfc1j?usp=drive_link";
const labs = lastWebtech.filter((post) => post.data.type === "labs");
const rk = lastWebtech.filter((post) => post.data.type === "rk");
const schedule = lastWebtech.filter((post) => post.data.type === "schedule");
---

<CourseLayout
    title="Основы веб-разработки"
    labs={labs}
    rk={rk}
    schedule={schedule}
    statementHref={statementHref}
    name="web-client-dev"
/>

<style>
    @media screen and (min-width: 500px) {
        .columns {
            columns: 2 1em;
        }
        .columns > li {
            margin-top: 0;
        }
    }
</style>
