---
const { person } = Astro.props;
---

<li class="persons-item">
    {
        person.imgUrl ? (
            <div class="bg-bg-tertiary h-[100vw] sm:h-[45vw] lg:h-[30vw] xl:h-380px 2xl:h-430px rounded-[30px]  mb-5 overflow-hidden flex items-end">
                <img
                    class="w-full"
                    src={person.imgUrl}
                    alt={"фото" + person.name}
                />
            </div>
        ) : (
            <div class="bg-bg-tertiary h-[100vw] sm:h-[45vw] lg:h-[30vw] xl:h-380px 2xl:h-430px rounded-[30px] mb-5 overflow-hidden px-6.5 flex flex-col justify-end">
                <p class="font-titles text-xl  sm:text-base text-center mb-5 ">
                    Мастер знаний, временно в облике кота
                </p>
                <img
                    class="w-3/4 ml-auto mr-10 "
                    src="./src/assets/img/cat-glasses.svg"
                />
            </div>
        )
    }
    <h3
        class="persons-item-name light:text-text-secondary mb-2 line-height-[1]"
    >
        {person.name}
    </h3>
    {
        person.role ? (
            <p class="persons-item-role line-height-[1] text-text-tertiary">
                {person.role}
            </p>
        ) : null
    }
</li>
